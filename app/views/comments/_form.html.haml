= form_for @comment, :html => { :class => 'form-horizontal' } do |f|
  .form-group
    = f.label :text, :class => 'control-label col-md-1'
    .col-md-11
      = f.text_area :text, rows: 40, :class => 'text-field form-control'
  .form-group
    .col-md-10
      = f.submit nil, :class => 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), |
        comments_path, :class => 'btn btn-default'                   |
