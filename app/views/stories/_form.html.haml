= form_for @story, html: {} do |f|
  .form-group
    = f.text_field :title, :class => 'text-field form-control', placeholder: "Story Title"
  .form-group
    = f.cktext_area :text, :class => 'text-field form-control', :ckeditor => {:toolbar => 'mini'}
  .form-group
    = f.submit nil, :class => 'btn btn-primary'
    = link_to 'Cancel', :back, :class => 'btn btn-default'
