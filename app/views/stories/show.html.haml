- model_class = Story
.page-header
  %h1= t '.title', :default => Story
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:title)
    %dd
      %pre.prettyprint= @story.title
    %dt.label.label-default= model_class.human_attribute_name(:deleted_at)
    %dd
      %pre.prettyprint= @story.deleted_at
  .story-text
    = raw @story.text
  %p
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    stories_path, :class => 'btn btn-default'                |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_story_path(@story), :class => 'btn btn-default'     |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    story_path(@story),                                                                                          |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
